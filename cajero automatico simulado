import java.util.Scanner;

public class CajeroAutomatico {

    // Procedimiento para mostrar el menú
    public static void mostrarMenu() {
        System.out.println("1. Consultar saldo");
        System.out.println("2. Depositar dinero");
        System.out.println("3. Retirar dinero");
        System.out.println("4. Salir");
    }

    // Procedimiento para consultar el saldo
    public static void consultarSaldo(double saldo) {
        System.out.printf("Su saldo actual es: Q%.2f\n", saldo);
    }

    // Procedimiento para depositar dinero
    public static void depositarDinero(double[] saldo) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Ingrese monto a depositar: ");
        double monto = scanner.nextDouble();
        saldo[0] += monto;
        System.out.printf("Se ha depositado Q%.2f\n", monto);
    }

    // Procedimiento para retirar dinero
    public static void retirarDinero(double[] saldo) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Ingrese monto a retirar: ");
        double monto = scanner.nextDouble();
        if (monto <= saldo[0]) {
            saldo[0] -= monto;
            System.out.printf("Se ha retirado Q%.2f\n", monto);
        } else {
            System.out.println("Error: Saldo insuficiente.");
        }
    }

    // Procedimiento para iniciar sesión y controlar el flujo
    public static void iniciarSesion() {
        double[] saldo = {1500.00}; // saldo inicial
        Scanner scanner = new Scanner(System.in);
        int opcion;
        
        do {
            mostrarMenu();
            System.out.print("Opción: ");
            opcion = scanner.nextInt();
            
            switch (opcion) {
                case 1:
                    consultarSaldo(saldo[0]);
                    break;
                case 2:
                    depositarDinero(saldo);
                    break;
                case 3:
                    retirarDinero(saldo);
                    break;
                case 4:
                    System.out.println("Saliendo...");
                    break;
                default:
                    System.out.println("Opción no válida.");
            }
        } while (opcion != 4);
    }

    // Método principal
    public static void main(String[] args) {
        iniciarSesion();
    }
}
